{{#unless data}}
  <div class="container">
    <h1>User does not exits</h1>
  </div>
{{/unless}}
<div class="container">
  {{#with data}}
    <h2>{{username}}</h2>
    <img
      src="{{profileImg}}"
      id="profilePic"
      alt="profile picture of {{username}}"
      style="width: 20vw"
    />
    <h4>{{email}}</h4>
    <h5>{{description}}</h5>
  {{/with}}

  {{#each favorites}}
    {{this}}
  {{/each}}

  {{#if userMatch}}
    <br />
    <a href="/users/{{data.id}}/edit" class="btn btn-warning list-btn">Edit</a>
    <br />
  {{/if}}

  {{#if roles.isPA}}
    <br />
    <a href="/users/{{data.id}}/edit" class="btn btn-warning list-btn">Edit</a>
    <br />
    <form action="/users/{{data.id}}/delete" method="POST">
      <button type="submit" class="btn btn-danger list-btn">Delete</button>
    </form>

  {{/if}}
</div>