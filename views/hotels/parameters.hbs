<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Datos de la Reserva</h1>
            <hr>

            <form action="/parametros" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="startInput" class="form-label">Check-in:</label>
                        <input type="date" class="form-control" id="startInput" name="tripStart" value="2018-07-22"
                            min="2022-09-13" max="2024-12-31">
                        <div class="form-text">Requerido.</div>
                    </div>
                    <div class="col">
                        <label for="endInput" class="form-label">Check-out:</label>
                        <input type="date" class="form-control" id="endInput" name="tripEnd" value="2018-07-22"
                            min="2022-09-13" max="2024-12-31">
                        <div class="form-text">Requerido.</div>
                    </div>
                    <div class="col">
                        <label for="countryInput" class="form-label">Country</label>
                        <input type="text" class="form-control" id="countryInput" name="country">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="radiusInput" class="form-label">Distancia en metros de ubicacion</label>
                    <input type="number" class="form-control" id="radiusInput" name="radio">
                </div>

                <div class="mb-3">
                    <label for="startRatingInput" class="form-label">Estrellas</label>
                    <input type="number" class="form-control" id="startRatingInput" name="startRatingInput">
                </div>
                <div class="mb-3">
                    <label for="nPersonasInput" class="form-label">Estrellas</label>
                    <input type="number" class="form-control" id="nPersonasInput" name="nPersonasInput">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Continuar con la reserva</button>
                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

</div>